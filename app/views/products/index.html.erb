<h1>Our products' list</h1>
<% @products.each do |product| %>
<p><%= link_to product.name, product_path(product.id) %></p>
<%= image_tag product.photos.first.image %>
<%= product.price %>
<%= current_user ? (link_to "buy", new_product_cart_path(product.id)):(link_to "buy", new_user_registration_path) %>
<% end %>
